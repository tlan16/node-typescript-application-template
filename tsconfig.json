{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/node22/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,
    "noUnusedLocals": false, // Do this at lint level
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
}
